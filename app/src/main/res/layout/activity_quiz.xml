<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:padding="5dp"
    tools:context=".quiz">

    <androidx.cardview.widget.CardView
        android:id="@+id/que"
        android:layout_width="180dp"
        android:layout_height="160dp"
        android:background="@android:drawable/divider_horizontal_dark"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.169"
  ><com.airbnb.lottie.LottieAnimationView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:lottie_autoPlay="true"
    app:lottie_loop="true"
        android:background="@color/white"
    app:lottie_rawRes="@raw/quiz"></com.airbnb.lottie.LottieAnimationView>
    </androidx.cardview.widget.CardView>

    <ImageButton
        android:id="@+id/b1"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:background="#FFFFFF"
        android:onClick="opA"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.231"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.499" />

    <ImageButton
        android:id="@+id/b2"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:background="#FFFFFF"
        android:onClick="opB"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/b1"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/b1"
        app:layout_constraintTop_toBottomOf="@+id/b1"
        app:layout_constraintVertical_bias="0.111" />

    <ImageButton
        android:id="@+id/b3"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:background="#FFFFFF"
        android:onClick="opC"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toBottomOf="@+id/b1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.276"
        app:layout_constraintStart_toEndOf="@+id/b1"
        app:layout_constraintTop_toTopOf="@+id/b1"
        app:layout_constraintVertical_bias="0.0" />

    <ImageButton
        android:id="@+id/b4"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:background="#FFFFFF"
        android:onClick="opD"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toBottomOf="@+id/b2"
        app:layout_constraintEnd_toEndOf="@+id/b3"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/b2"
        app:layout_constraintTop_toTopOf="@+id/b2"
        app:layout_constraintVertical_bias="1.0" />

    <ImageButton
        android:layout_width="80dp"
        android:layout_height="80dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.924"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:scaleType="fitXY"
        android:background="@color/white"
        android:id="@+id/hint"
        app:layout_constraintVertical_bias="0.935"
        android:src="@drawable/hint" />

</androidx.constraintlayout.widget.ConstraintLayout>