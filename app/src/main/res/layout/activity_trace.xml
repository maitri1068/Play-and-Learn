<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"

    android:id="@+id/linearlayoutview"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".trace"
    android:layout_margin="10dp"
    android:padding="10dp"
    android:weightSum="4">

    <com.danny_jiang.tracinglibrary.view.TracingLetterView
        android:id="@+id/letter"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="match_parent"
        app:pointColor="@color/colorAccent"
        app:instructionMode="false"
        android:layout_margin="10dp"
        android:padding="10dp"
        app:strokeColor="@color/colorPrimary"
        app:anchorDrawable="@drawable/star"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHeight_percent="0.8"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/letter_lower"
        app:layout_constraintTop_toTopOf="parent"
        />

    <com.danny_jiang.tracinglibrary.view.TracingLetterView
        android:id="@+id/letter_lower"
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        app:pointColor="@color/colorAccent"
        android:layout_margin="10dp"
        android:padding="10dp"
        app:instructionMode="false"
        app:strokeColor="@color/colorPrimary"
        app:anchorDrawable="@drawable/star"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHeight_percent="0.8"
        app:layout_constraintLeft_toRightOf="@id/letter"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="end"
        android:layout_marginEnd="-20dp"
        android:orientation="vertical"
        android:layout_weight="1"
        android:weightSum="3">
        <ImageButton
            android:id="@+id/retry"
            android:layout_width="92dp"
            android:layout_height="89dp"
            android:scaleType="fitXY"
            android:layout_weight="1"
            app:circularflow_radiusInDP="5dp"
            app:srcCompat="@drawable/retry"
            android:onClick="onClick"/>
        <ImageButton
            android:id="@+id/next"
            android:layout_width="92dp"
            android:layout_height="89dp"
            android:scaleType="fitXY"
            android:layout_weight="1"
            app:circularflow_radiusInDP="5dp"
            app:srcCompat="@drawable/next_button_icon_png_32"
            android:onClick="onClick"/>
        <ImageButton
            android:id="@+id/prev"
            android:layout_width="92dp"
            android:layout_height="89dp"
            android:scaleType="fitXY"
            android:layout_weight="1"
            app:srcCompat="@drawable/hopstarter_button_button_previous_256"
            android:onClick="onClick"/>

    </LinearLayout>

</LinearLayout>